{
  "name": "nodejs-backend-template",
  "version": "1.0.0",
  "description": "This is a template for creating a scalable Node.js backend application.",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon -r dotenv/config src/index.js",
    "start": "node src/index.js",
    "lint": "eslint src/**/*.js",
    "test": "mocha --require dotenv/config --recursive test/**/*.test.js",
    "test:coverage": "nyc mocha --require dotenv/config --recursive test/**/*.test.js", 
    "prettier": "prettier --write 'src/**/*.js'",
    "ci": "npm run lint && npm run test"
  },
  "keywords": [
    "nodejs",
    "express",
    "backend",
    "enterprise",
    "scalable"
  ],
  "author": "Satyam Choubey",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.10.0",
    "nodemailer": "^6.10.0",
    "nodemon": "^3.1.9",
    "winston": "^3.17.0",
    "pino": "^8.12.0", 
    "prom-client": "^14.0.2", 
    "express-rate-limit": "^5.5.1"
  },
  "devDependencies": {
    "eslint": "^8.37.0",
    "mocha": "^10.2.0",
    "chai": "^4.3.7",
    "supertest": "^6.3.3",
    "nyc": "^15.1.0",
    "prettier": "^2.8.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SatyamChoubey789/Template-For-Node-Backend.git"
  },
  "bugs": {
    "url": "https://github.com/SatyamChoubey789/repository/issues"
  },
  "homepage": "https://github.com/SatyamChoubey789/repository#readme"
}
